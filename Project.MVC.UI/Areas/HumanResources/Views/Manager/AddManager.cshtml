@model StaffVM
@{
    ViewBag.Title = "AddManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">

            <section class="panel">

                <header class="panel-heading">
                    Add Manager
                </header>

                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">First Name</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.FirstName, new { @class = "form-control genislik", placeholder = "First Name" })
                        </div>

                    </div>
                    <br /> <br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">LastName</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.LastName, new { @class = "form-control genislik", placeholder = "Last Name" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Address</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.Address, new { @class = "form-control genislik", placeholder = "Address" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">TC</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.TC, new { @class = "form-control genislik", placeholder = "TC" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">City</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.City, new { @class = "form-control genislik", placeholder = "City" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Country</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.Country, new { @class = "form-control genislik", placeholder = "Country" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Phone</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.Phone, new { @class = "form-control genislik", placeholder = "Phone" })
                        </div>

                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Staff.Email, new { @class = "form-control genislik", placeholder = "Email" })
                        </div>
                        <br /><br />
                    </div>
                    <br /><br />


                </div>
                <br /><br />
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Wage</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Staff.Wage, new { @class = "form-control genislik", placeholder = "Wage" })
                    </div>

                </div>
                <br /><br />
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Department</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Staff.Department, new { @class = "form-control genislik", placeholder = "Department" })
                    </div>

                </div>
                <br /><br />

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Add</label>
                    <div class="col-sm-10">
                        <button class="btn btn-primary">
                            Add Manager
                        </button>
                    </div>

                </div>

            </section>
        </div>
    </div>


}

